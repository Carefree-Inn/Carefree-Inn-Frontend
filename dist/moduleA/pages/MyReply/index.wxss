.notif {
  width: calc(100vw - 40rpx);
  height: 100rpx;
  background-color: #FFF9F9;
  border-bottom: gray;
  padding: 20rpx 20rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: row;
      -ms-flex-direction: row;
          flex-direction: row;
}
.notif .avatar {
  width: 90rpx;
  height: 90rpx;
  margin: auto 0;
}
.notif .avatar .img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.notif .text {
  width: calc(100vw - 40rpx - 300rpx);
  margin-left: 20rpx;
  height: 100%;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-size: 30rpx;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  background-color: aquamarine;
}
.notif .text .name {
  font-weight: 500;
}
.notif .text .top {
  height: 50%;
  font-size: 25rpx;
}
.notif .text .comment {
  width: 100%;
  font-size: 23rpx;
  overflow: hidden;
  white-space: nowrap;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
}
.notif .text .time {
  color: gray;
  font-size: 20rpx;
}
.notif .post {
  color: gray;
  width: 160rpx;
  height: 90rpx;
  font-size: 25rpx;
  line-height: 30rpx;
  background-color: aqua;
  overflow: hidden;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  word-break: break-all;
}

.reply {
  width: 100vw;
  min-height: 100vh;
}
.reply .lastest {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 20rpx;
  color: gray;
}
.reply .l_box {
  width: 100%;
  height: auto;
}
.reply .history {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 20rpx;
  color: gray;
}
.reply .h_box {
  width: 100%;
  height: auto;
}
.reply .btm {
  width: 100%;
  text-align: center;
  color: gray;
}

