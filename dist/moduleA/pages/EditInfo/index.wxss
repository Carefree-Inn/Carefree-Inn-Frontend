.Edit {
  width: 100vw;
  height: 100vh;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  background-color: #FFEFEA;
}
.Edit .Avatar {
  width: 200rpx;
  height: 200rpx;
  /*  background-color: antiquewhite; */
  margin: 25rpx auto;
}
.Edit .Avatar Image {
  background-color: beige;
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
}
.Edit .uid {
  margin: 0 auto;
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 35rpx;
  border-bottom: 1rpx solid #c7c7c7;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-family: 'YouYuan3608ccffd525022';
}
.Edit .uid Text {
  font-family: 'YouYuan3608ccffd525022';
  margin-left: 10%;
}
.Edit .uid Input {
  color: gray;
  text-align: center;
  width: 400rpx;
  height: 100rpx;
}
.submit {
  width: 200rpx;
  height: 80rpx;
  color: white;
  background-color: #E4ACAC;
  border-radius: 10rpx;
  font-size: 30rpx;
  margin: 40rpx auto;
  line-height: 80rpx;
}
.user-sex {
  margin: 0 auto;
  width: 80%;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  gap: 40rpx;
  font-size: 35rpx;
}
.user-sex .sex {
  margin-left: 10%;
}
.user-sex .sex-radio {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  gap: 30rpx;
}

