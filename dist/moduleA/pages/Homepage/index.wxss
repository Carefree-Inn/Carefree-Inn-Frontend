.home {
  background-color: #FFEFEA;
  width: 100vw;
  min-height: 100vh;
  padding-bottom: 30rpx;
  /*  padding-left: 60px; */
}
.home .edit {
  height: 60rpx;
  /* background-color:aquamarine; */
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: right;
      -ms-flex-pack: right;
          justify-content: right;
}
.home .edit Button {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 110rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #D39999;
  color: white;
  font-size: 25rpx;
  text-align: center;
  margin-left: 80%;
}
.home .top {
  width: 100%;
  height: 16vh;
  /*  background-color:aqua;     */
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding-left: 60rpx;
  border-bottom: 2rpx solid #D5D5D5;
}
.home .top .name {
  width: 50%;
  color: black;
  font-size: 40rpx;
  margin: auto 0;
}
.home .top .avatar {
  width: 50%;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  margin: auto 0;
  /* background-color: antiquewhite; */
}
.home .top .avatar Image {
  background-color: #D5D5D5;
  width: 160rpx;
  height: 160rpx;
  border-radius: 160rpx;
}
.home .bottom {
  width: 100vw;
  padding-top: 20rpx;
  height: auto;
  font-size: 35rpx;
  font-weight: 400;
}
.home .bottom .publish {
  height: 80rpx;
  margin-left: 60rpx;
}
.home .bottom .post {
  margin: 0 30rpx;
  margin-bottom: 30rpx;
}

