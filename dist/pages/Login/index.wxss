.login-wrapper {
  width: 100%;
  height: 100vh;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  background-color: #FFEFEA;
}
.login-wrapper .login-title {
  margin-top: 10vh;
  font-size: 36rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.login-wrapper .login-title Text {
  margin: 0.5vh auto;
}
.login-wrapper .login-form .username,
.login-wrapper .login-form .password {
  margin: 5vh auto;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.login-wrapper .login-form .username Text,
.login-wrapper .login-form .password Text {
  margin-right: 5vw;
  line-height: 100rpx;
}
.login-wrapper .login-form .username Input,
.login-wrapper .login-form .password Input {
  background-color: #F5E3E3;
  height: 100rpx;
  width: 60vw;
  padding: 2rpx 16rpx;
}
.login-wrapper .login-submit {
  margin-top: 5vh;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  width: 25vw;
  height: 25vw;
  border-radius: 50%;
  background-color: #E4ACAC;
}
.login-wrapper .login-submit Image {
  width: 60%;
  height: 60%;
}
.login-wrapper .portal {
  position: fixed;
  top: -10vh;
  background-color: #E4ACAC;
  padding: 1.5vh 5vw;
  border-radius: 10rpx;
}
.login-wrapper .active {
  top: 3.5vh;
  -webkit-transition: all 0.3s ease-in;
  -o-transition: all 0.3s ease-in;
  transition: all 0.3s ease-in;
}

