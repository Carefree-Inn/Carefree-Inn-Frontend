.Mine {
  width: 100vw;
  height: 100vh;
  background-color: #FFEFEA;
}
.Mine .user {
  width: calc(100%-60rpx);
  height: 20vh;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: row;
      -ms-flex-direction: row;
          flex-direction: row;
}
.Mine .user .left {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 50%;
  margin-left: 80rpx;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-justify-content: space-around;
      -ms-flex-pack: distribute;
          justify-content: space-around;
}
.Mine .user .left .u_name {
  color: black;
  font-size: 40rpx;
}
.Mine .user .left .join_time {
  font-size: 30rpx;
  color: #6B6B6B;
}
.Mine .user .right {
  width: 50%;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  margin: auto 0;
}
.Mine .user .right Image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 120rpx;
}
.Mine .Mine_box {
  width: calc(100% - 120rpx);
  height: 70vh;
  margin-left: 60rpx;
  background-color: white;
  border-radius: 30rpx;
  -webkit-box-shadow: 0 0 5rpx 5rpx #f1f1f1;
          box-shadow: 0 0 5rpx 5rpx #f1f1f1;
  padding-top: 30rpx;
}
.Mine .Mine_box .item {
  width: calc(100% - 60rpx);
  margin-left: 50rpx;
  height: 100rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: row;
      -ms-flex-direction: row;
          flex-direction: row;
  padding-top: 40rpx;
}
.Mine .Mine_box .item Image {
  width: 50rpx;
  height: 50rpx;
}
.Mine .Mine_box .item Text {
  margin-left: 30rpx;
  font-size: 35rpx;
  color: black;
  font-weight: 400;
}
.Mine .Mine_box .item .circle {
  /*  margin: 0 40px; */
  width: 40rpx;
  height: 40rpx;
  font-size: 28rpx;
  border-radius: 50%;
  color: white;
  background-color: #E4ACAC;
  text-align: center;
}

